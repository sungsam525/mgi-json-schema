{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Experiment",
    "definitions": {"Experiment": {
        "type": "object",
        "properties": {
            "variableMeasured": {
                "type": "array",
                "title": "Variables Measured",
                "uniqueItems": true,
                "items": {
                    "title": "Variable Measured",
                    "$ref": "PropertyValue.json#/definitions/PropertyValue"
                }
            },
            "parameterControlled": {
                "type": "array",
                "title": "Parameters Controlled",
                "uniqueItems": true,
                "items": {
                    "title": "Parameter Controlled",
                    "$ref": "PropertyValue.json#/definitions/PropertyValue"
                }
            },
            "conditionObserved": {
                "type": "array",
                "title": "Conditions Observed",
                "uniqueItems": true,
                "items": {
                    "title": "Condition Observed",
                    "$ref": "PropertyValue.json#/definitions/PropertyValue"
                }
            },
            "isPartOf": {
                "title": "Has Parent Item(s)",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {"@id": {
                        "title": "Referenced Item",
                        "cordra": {"type": {"handleReference": {"types": [
                            "Collection",
                            "Experiment",
                            "Study"
                        ]}}}
                    }}
                }
            },
            "hasPart": {
                "title": "Has Child Item(s)",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {"@id": {
                        "title": "Referenced Item",
                        "cordra": {"type": {"handleReference": {"types": []}}}
                    }}
                }
            }
        }
    }}
}